{
  "variables": {
    "ISO_URL":        "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-10.3.0-amd64-netinst.iso",
    "ISO_SUM":        "6a901b5abe43d88b39d627e1339d15507cc38f980036b928f835e0f0e957d3d8",
    "VM_DISK_SIZE":   "5120",
    "VM_NAME":        "buster64"
  },
	"provisioners": [
    {
      "execute_command": "echo 'vagrant' | sudo -S sh -c '{{.Vars}} {{.Path}}'",
      "scripts": [
				"scripts/setpasswordlesssudoforvagrant.sh",
                "scripts/addinsecuresshkey.sh",
                "scripts/installvboxguestadditions.sh"],
			"type": "shell",
			"only": ["virtualbox-iso"]
    }
  ],
  "builders": [
		{
			"type": "virtualbox-iso",
			"boot_command": [
			"<esc> <wait>",
			"auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian_buster.cfg <wait>",
			"hostname={{user `VM_NAME`}} ",
			"<enter><wait>"
			],
			"headless": false,
			"boot_wait": "10s",
			"disk_size": "{{ user `VM_DISK_SIZE` }}",
			"guest_os_type": "Debian_64",
			"http_directory": "http",
			"iso_checksum": "{{ user `ISO_SUM` }}",
			"iso_checksum_type": "sha256",
			"iso_url": "{{ user `ISO_URL` }}",
			"output_directory": "output/{{ build_type }}/{{ user `VM_NAME` }}",
			"ssh_username": "vagrant",
			"ssh_password": "vagrant",
			"ssh_port": 22,
			"ssh_wait_timeout": "10000s",
			"shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S bash 'shutdown.sh'",
			"vboxmanage": [
			["modifyvm", "{{.Name}}", "--memory", "1024"]
			]
		}
		],
		"post-processors": [
			{
				"type": "vagrant",
				"output": "output/{{ build_type }}/{{ user `VM_NAME` }}/virtualbox.box",
				"keep_input_artifact": true
			}
		 ]
	}
